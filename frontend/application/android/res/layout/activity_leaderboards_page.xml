<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".LeaderboardsPage">

    <Button
        android:id="@+id/LeaderboardBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LeaderboardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        app:layout_constraintStart_toEndOf="@+id/LeaderboardBack"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LeaderboardRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round"
        app:layout_constraintStart_toEndOf="@+id/LeaderboardLevel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LeaderboardFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends only: OFF"
        app:layout_constraintStart_toEndOf="@+id/LeaderboardRound"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/LeaderboardList"
        android:layout_width="729dp"
        android:layout_height="361dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LeaderboardBack" />

</androidx.constraintlayout.widget.ConstraintLayout>